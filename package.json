{
  "name": "krauzsoft-controller",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "dayjs": "^1.8.10",
    "firebase": "^5.8.6",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.8",
    "redux": "^4.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "createClass": "createReactClass",
        "pragma": "React",
        "version": "detect",
        "flowVersion": "0.53"
      },
      "propWrapperFunctions": [
        "forbidExtraProps",
        {
          "property": "freeze",
          "object": "Object"
        },
        {
          "property": "myFavoriteWrapper"
        }
      ]
    },
    "rules": {
      "no-console": 0,
      "prefer-destructuring": 2,
      "no-param-reassign": 1,
      "prefer-spread": 1,
      "import/no-mutable-exports": 2,
      "no-restricted-globals": 2,
      "react/no-deprecated": 2,
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react/prop-types": [
        1,
        {
          "ignore": [
            "history",
            "dispatch",
            "match",
            "firebase"
          ]
        }
      ]
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
